<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.match.main.MatchDetailsFragment"
    android:background="@color/surface_surface_1">

    <include
        layout="@layout/item_game"
        android:id="@+id/gamelayout"
        app:layout_constraintTop_toTopOf="parent"
    />
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/gamelayout"
        android:layout_margin="8dp"
        android:id="@+id/divider_match_details"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/divider_match_details"
        android:id="@+id/first_linear"
        android:gravity="center"

        >
        <include
            layout="@layout/progress_items"
            android:id="@+id/fgpct"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            />
        <include
            layout="@layout/progress_items"
            android:id="@+id/threeptpct"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            />
        <include
            layout="@layout/progress_items"
            android:id="@+id/rebounds"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginEnd="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/first_linear"
        android:id="@+id/second_linear"
        android:gravity="center"

        >
        <include
            layout="@layout/progress_items"
            android:id="@+id/assists"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            />
        <include
            layout="@layout/progress_items"
            android:id="@+id/turnovers"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            />
        <include
            layout="@layout/progress_items"
            android:id="@+id/offreb"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginEnd="16dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/second_linear"
        android:layout_margin="8dp"
        android:id="@+id/rv_ytvideos"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="ADD"
        android:id="@+id/btn_add_video_modal"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".util.main.TeamInfoFragment"
    android:background="@color/surface_surface_0">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:backgroundTint="@color/surface_surface_1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/corners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/team_info_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/team_info_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            />
        <TextView
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_team_info_abb"
            app:layout_constraintStart_toEndOf="@id/team_info_photo"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team_info_name"
            app:layout_constraintStart_toEndOf="@id/team_info_photo"
            style="@style/HeadlineMediumNLv1Left"
            app:layout_constraintTop_toBottomOf="@id/tv_team_info_abb"
            android:layout_marginBottom="40dp"
            />
        <TextView
            android:layout_marginTop="35dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team_location"
            style="@style/AssistiveNLv1Left"
            app:layout_constraintTop_toBottomOf="@id/team_info_name"
            app:layout_constraintStart_toEndOf="@id/team_info_photo"
            />
        <LinearLayout
            android:layout_marginTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_conf_div"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/team_info_photo"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            >
            <TextView
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="Eastern \n Conference"
                android:id="@+id/tv_conference"
                style="@style/BodyLargeNLv1Center"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                />
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_primary_hightlight"
                android:textAlignment="center"
                android:id="@+id/divider"
                android:layout_marginStart="16dp"
                />
            <TextView
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                style="@style/BodyLargeNLv1Center"
                android:id="@+id/tv_division"
                android:text="Atlantic \n Division"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other teams in the division"
        android:id="@+id/tv_other_teams"
        style="@style/HeadlineSmallNLv1Left"
        app:layout_constraintTop_toBottomOf="@id/team_info_layout"
        android:layout_marginTop="22dp"
        android:layout_marginStart="16dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/corners"
        android:id="@+id/rv_conference_teams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_other_teams"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/surface_surface_1"/>






</androidx.constraintlayout.widget.ConstraintLayout>
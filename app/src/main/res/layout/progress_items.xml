<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stats_category"
        android:text="FG%"
        style="@style/DescriptionNLv1Center"
        app:layout_constraintBottom_toTopOf="@id/first_battery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
/>
    <View
        android:layout_width="32dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@id/first_number_value"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/surface_surface_1"
        android:id="@+id/first_battery"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"

        >


    </View>
    <View
        android:layout_width="32dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@id/first_number_value"
        app:layout_constraintStart_toEndOf="@id/first_battery"
        android:background="@color/surface_surface_1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"
        android:id="@+id/second_battery"
        >

    </View>
    <TextView
        android:text="50"
        android:id="@+id/first_number_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>
    <TextView
        android:text="50"
        android:id="@+id/second_number_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sofanba">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_policy"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SofaNBA"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.settings.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".ui.playeractivity.PlayerActivity"
            android:exported="false"
            android:label="@string/title_activity_player"
            android:theme="@style/Theme.SofaNBA.NoActionBar" />
        <activity
            android:name=".ui.match.main.MatchActivity"
            android:exported="false"
            android:label="@string/title_activity_match"
            android:theme="@style/Theme.SofaNBA.NoActionBar" />
        <activity
            android:name=".ui.team.main.TeamActivity"
            android:exported="false"
            android:label="@string/title_activity_team"
            android:theme="@style/Theme.SofaNBA.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>